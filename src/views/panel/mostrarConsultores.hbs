<!--**********************************
          Content body start
***********************************-->
<div class="content-body">
    <!-- row -->
    <div class="container-fluid">
        <div class="row">

            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Datos de consultores</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="consultoresTabla" class="table table-striped text-center" style="width: 100%">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Nombre</th>
                                        <th>Fecha de registro</th>
                                        <th>Email</th>
                                        <th>Teléfono</th>
                                        <th>Empresas asignadas</th>
                                        <th>Estado</th>
                                        <th>Acción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each consultores}}
                                    <tr>
                                        <td><img class="rounded-circle" width="35" src="./img/profile/small/pic1.jpg" alt="Perfil_Consultor"></td>
                                        <td>{{nombres}} {{apellidos}}</td>
                                        <td>{{fecha_creacion}}</td>
                                        <td>{{email}}</td>
                                        <td>{{tel_consultor}}</td>
                                        <td>{{num_empresas}}</td>
                                        <td>
                                            {{#comparar estadoAdm '==' 0}}
                                            <span class="badge light badge-danger">Pendiente</span>
                                            {{/comparar}}
                                            {{#comparar estadoAdm '!=' 0}}
                                            <span class="badge light badge-success" >Aprobado</span>
                                            {{/comparar}}
                                        </td>
                                        <td>
                                            <div style="margin: 0 auto">
                                                <a href="/consultores/{{codigo}}" class="btn btn-primary shadow btn-xs sharp mr-1"
                                                    style="background: linear-gradient(189.55deg, #FED061 -131.52%, #812082 -11.9%, #50368C 129.46%);">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                                <a onclick="bloquearConsultor({{id_consultores}})" class="btn btn-danger shadow btn-xs sharp" 
                                                    style="background: #DC0000; color: white;"><i class="fa fa-ban"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!--**********************************
            Scripts
***********************************-->
<script>
    function bloquearConsultor(id) {
        console.log(id)
        Swal.fire({
            title: '¿Deseas bloquear este consultor?',
            text: "Podrás activarlo nuevamente más adelante.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#50368C',
            cancelButtonColor: '#d33',
            cancelButtonText: 'Cancelar',
            confirmButtonText: '¡Sí, bloquear!'
        })
        .then((result) => {
            if (result.isConfirmed) {
                fetch('/bloquearConsultor', {
                    method: 'POST',
                    body: JSON.stringify({id}),
                    headers: {'Content-Type': 'application/json'}
                }).then(res => res.json())
                    .catch(error => console.error('Error:', error))
                    .then(response => {
                        if (response){
                            location.reload();
                        } else {
                            Swal.fire(
                                'Error!',
                                'El consultor ya está bloqueado/inactivo.',
                                'error'
                            )
                        }
                    });
            }
        })
    }
</script>